<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/voteProfilePic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/voteUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/gilroymedium"
        android:text="Hoàng Minh Thái"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/voteProfilePic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/voteStar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voteProfilePic"
        app:srcCompat="@drawable/ic_star" />

    <ImageView
        android:id="@+id/voteStar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/voteStar1"
        app:layout_constraintTop_toTopOf="@+id/voteStar1"
        app:srcCompat="@drawable/ic_star" />

    <ImageView
        android:id="@+id/voteStar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/voteStar2"
        app:layout_constraintTop_toTopOf="@+id/voteStar1"
        app:srcCompat="@drawable/ic_star" />

    <ImageView
        android:id="@+id/voteStar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/voteStar5"
        app:layout_constraintTop_toTopOf="@+id/voteStar1"
        app:srcCompat="@drawable/ic_star" />

    <ImageView
        android:id="@+id/voteStar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/voteStar3"
        app:layout_constraintTop_toTopOf="@+id/voteStar3"
        app:srcCompat="@drawable/ic_star" />

    <TextView
        android:id="@+id/voteCommented"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:text="Lời đánh giá"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/voteStar1" />
</androidx.constraintlayout.widget.ConstraintLayout>