<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/_bg__login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/_bg__login_shape" />

        <RelativeLayout
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="481dp">

            <Button
                android:id="@+id/rectangle_257"
                android:layout_width="300dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rectangle_257_shape"
                android:gravity="center"
                android:text="Reset"
                android:textColor="@color/login_color"
                android:textSize="18sp"
                android:textStyle="bold"


                />

        </RelativeLayout>


        <Button
            android:id="@+id/already_have_an_account__sign_up"
            android:layout_width="332dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="548dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/already_have_an_account__sign_up_string"
            android:textColor="@color/forget_password__color"
            android:textSize="16sp" />

        <Button
            android:id="@+id/do_you_have_an_account__sign_in"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="598dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/do_you_have_an_account__sign_in_string"
            android:textColor="@color/app_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/rectangle_259"
            android:layout_width="297dp"
            android:layout_height="57dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="338dp"
            android:background="@drawable/rectangle_259_shape"
            android:gravity="center"
            android:inputType="textPassword"
            android:text="@string/enter_you_email_ek1_string"

            />


        <EditText
            android:id="@+id/rectangle_262"
            android:layout_width="297dp"
            android:layout_height="57dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="268dp"
            android:background="@drawable/rectangle_262_shape"
            android:gravity="center"
            android:inputType="textPassword"
            android:text="@string/enter_you_email_ek1_string"

            />


        <TextView
            android:id="@+id/welcome_back_"
            android:layout_width="312dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="185dp"
            android:gravity="center"
            android:text="Reset your password"
            android:textColor="@color/app_color"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/vector"
            android:layout_width="21.88dp"
            android:layout_height="21.32dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="35dp"
            android:contentDescription="vector"
            android:src="@drawable/vector" />

    </RelativeLayout>

</LinearLayout>
