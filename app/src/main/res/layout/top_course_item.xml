<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:paddingBottom="4dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/top_course_item_image"
        android:layout_width="120dp"
        android:layout_height="96dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageview"
        app:srcCompat="@drawable/gettyimages_1200911481_f607d5c6347f4918b4ded26e96fb7247" />

    <TextView
        android:id="@+id/top_course_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/gilroybold"
        android:text="Adobe illustrator for all beginner artist"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/top_course_item_image"
        app:layout_constraintTop_toTopOf="@+id/top_course_item_image" />

    <TextView
        android:id="@+id/top_course_item_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/gilroymedium"
        android:text="Samule Doe"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/top_course_item_students"
        app:layout_constraintStart_toEndOf="@+id/top_course_item_image"
        app:layout_constraintTop_toBottomOf="@+id/top_course_item_name" />

    <TextView
        android:id="@+id/top_course_item_students"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:fontFamily="@font/gilroyregular"
        android:gravity="center_horizontal|center_vertical"
        android:text="4k students"
        android:textColor="@color/md_grey_700"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/top_course_item_image"
        app:layout_constraintStart_toEndOf="@+id/userImage" />

    <TextView
        android:id="@+id/top_course_item_star"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:fontFamily="@font/gilroyregular"
        android:text="4.7"
        android:textColor="@color/md_grey_700"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/top_course_item_image"
        app:layout_constraintStart_toEndOf="@+id/starImage" />

    <ImageView
        android:id="@+id/starImage"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/top_course_item_image"
        app:layout_constraintStart_toEndOf="@+id/top_course_item_students"
        app:srcCompat="@drawable/ic_star" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/top_course_item_image"
        app:layout_constraintStart_toEndOf="@+id/top_course_item_image"
        app:srcCompat="@drawable/ic_user" />

</androidx.constraintlayout.widget.ConstraintLayout>